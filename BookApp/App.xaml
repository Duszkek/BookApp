<?xml version = "1.0" encoding = "UTF-8" ?>
<base:CurrentApplication xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:base="clr-namespace:BookApp.Utils"
                    xmlns:local="clr-namespace:BookApp"
                    xmlns:converters="clr-namespace:BookApp.Converters"
                    x:Class="BookApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="Resources/Styles/MainTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
            <converters:BoolToSaveStatusConverter x:Key="BoolToSaveStatusConverter" />
        </ResourceDictionary>
    </Application.Resources>
</base:CurrentApplication>
